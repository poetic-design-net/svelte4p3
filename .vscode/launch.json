{
  "compounds": [
    {
      "configurations": ["Astro", "Payload"],
      "name": "Astro + Payload",
      "presentation": {
        "group": "Astro + Payload"
      },
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "command": "pnpm dev --filter astro...",
      "cwd": "${workspaceFolder}/",
      "name": "Astro",
      "preLaunchTask": "pnpm install",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node-terminal"
    },
    {
      "command": "pnpm dev --filter payload...",
      "cwd": "${workspaceFolder}/",
      "name": "Payload",
      "preLaunchTask": "pnpm install",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node-terminal"
    },
    {
      "command": "pnpm storybook --filter docs...",
      "cwd": "${workspaceFolder}/",
      "name": "Docs",
      "preLaunchTask": "pnpm install",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node-terminal"
    }
  ],
  "version": "0.2.0"
}
